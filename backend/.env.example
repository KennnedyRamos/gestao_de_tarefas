DATABASE_URL=postgresql://USER:SENHA@HOST:5432/NOME_DB
SECRET_KEY=troque-por-uma-chave-segura
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

ADMIN_EMAIL=admin@empresa.com
ADMIN_PASSWORD=troque-por-uma-senha-forte
ADMIN_NAME=Administrador
ADMIN_ROLE=admin

# Separar por virgula.
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://seu-frontend.vercel.app
# Ajuste para seu dominio, se necessario.
CORS_ORIGIN_REGEX=^https://.*\\.vercel\\.app$

# Opcional: caminho para uploads persistentes.
# Exemplo em Render: /var/data/uploads
UPLOADS_DIR=

# Controle do bootstrap de banco na inicializacao:
# background (padrao): executa ajustes em segundo plano sem bloquear a abertura da porta
# sync: executa ajustes de forma sincronizada antes de atender requisicoes
# off: desativa os ajustes automaticos
DB_BOOTSTRAP_MODE=background

# Opcional (recomendado no Render Free): usar Supabase Storage para PDFs.
# Quando SUPABASE_URL + SUPABASE_SERVICE_ROLE_KEY + SUPABASE_STORAGE_BUCKET estiverem preenchidos,
# o backend salva os arquivos de entregas no Supabase em vez do disco local.
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_STORAGE_BUCKET=deliveries
SUPABASE_STORAGE_PREFIX=deliveries
# true: usa URL pública do bucket | false: gera URL assinada com expiração.
SUPABASE_STORAGE_PUBLIC=true
# true: tenta resolver caminhos antigos (ex.: deliveries/arquivo.pdf) no bucket do Supabase.
SUPABASE_STORAGE_LEGACY_PATHS=true
# TTL da URL assinada em segundos (usado quando SUPABASE_STORAGE_PUBLIC=false).
SUPABASE_STORAGE_SIGNED_URL_TTL=3600
